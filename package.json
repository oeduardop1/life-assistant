{
  "name": "life-assistant",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently -k -p [{name}] -n turbo,ai -c blue,yellow \"turbo run dev\" \"fuser -k 8000/tcp 2>/dev/null; cd services/ai && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\"",
    "dev:js": "turbo run dev",
    "dev:ai": "fuser -k 8000/tcp 2>/dev/null; cd services/ai && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "infra:up": "./scripts/dev-start.sh",
    "infra:down": "./scripts/dev-stop.sh",
    "setup:prod": "./scripts/setup-production.sh",
    "setup:prod:dry": "./scripts/setup-production.sh --dry-run",
    "setup:prod:check": "./scripts/setup-production.sh --check",
    "setup:vercel": "./scripts/setup-production.sh --vercel-only",
    "setup:railway": "./scripts/setup-production.sh --railway-only"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "concurrently": "^9.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.7.4",
    "turbo": "2.7.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.52.0"
  },
  "dependencies": {
    "@radix-ui/react-switch": "^1.2.6"
  }
}
